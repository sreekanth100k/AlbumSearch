<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dip"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:text="Search"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dip"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="Artistname (Required)"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="0dip"
            android:layout_weight="1"
            android:id="@+id/id_artist_name_et"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="Trackname (Required)"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="0dip"
            android:layout_weight="1"
            android:id="@+id/id_track_name_et"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dip"
        android:layout_weight="1"
        android:id="@+id/id_collection_name_tv"
        android:text="Collectionname (Optional)"
        android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="0dip"
            android:layout_weight="1"
            android:id="@+id/id_collection_name_et"
            android:layout_height="wrap_content"/>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dip"
        android:layout_weight="1"
        android:text="Collectionprice (Optional)"
        android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="0dip"
                android:layout_weight="1"
                android:id="@+id/id_collection_price_et"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dip"
        android:layout_weight="1"
        android:text= "Releasedate (Optional)"
        android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="0dip"
            android:layout_weight="1"
            android:id="@+id/id_release_date_et"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="100dip"/>


    <Button
        android:layout_width="wrap_content"
        android:id="@+id/id_search_btn"
        android:text="Search"
        android:layout_height="wrap_content"/>



</LinearLayout>