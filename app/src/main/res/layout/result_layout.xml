<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/holo_red_light"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/id_kind_tv"/>

    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/id_artist_name_tv"
        android:gravity="center"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/id_collection_name_tv"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/id_track_name_tv"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="fill_parent"
        android:gravity="center"
        android:id="@+id/id_collection_censored_name_tv"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/id_collection_price_tv"
        android:layout_height="wrap_content"/>

   <TextView
       android:layout_width="wrap_content"
    android:id="@+id/id_releaseDate_tv"
    android:layout_height="wrap_content"/>


</LinearLayout>
        <ImageView
            android:layout_width="100dip"
            android:id="@+id/id_thumb_nail"
            android:layout_height="fill_parent"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="@android:color/white"/>
</LinearLayout>
